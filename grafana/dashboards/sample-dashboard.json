{
  "id": null,
  "uid": null,
  "title": "Spring Observability Dashboard",
  "tags": [
    "spring",
    "observability",
    "demo"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "bargauge",
      "title": "HTTP Requests by Status Code",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by(status) (rate(http_server_requests_seconds_count[1m]))",
          "legendFormat": "{{status}}",
          "refId": "A",
          "datasource": "Prometheus"
        }
      ],
      "options": {
        "showUnfilled": false
      }
    },
    {
      "type": "timeseries",
      "title": "Average Response Time (1m rate)",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum[1m]) / rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "avg response time",
          "refId": "B",
          "datasource": "Prometheus"
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "color": "green",
            "value": null
          },
          {
            "color": "orange",
            "value": 1
          },
          {
            "color": "red",
            "value": 3
          }
        ]
      }
    },
    {
      "type": "logs",
      "title": "\ud83d\udd25 Error Logs (from Loki)",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "{job=\"spring-app\"} |= \"\ud83d\udd25\"",
          "refId": "C",
          "datasource": "Loki"
        }
      ]
    }
  ]
}
